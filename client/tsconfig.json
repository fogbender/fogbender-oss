{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0",

    // remove later
    "noUncheckedIndexedAccess": false,
    // normal stuff
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowImportingTsExtensions": false
  },
  "include": ["src"]
}
