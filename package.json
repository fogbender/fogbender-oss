{
  "private": true,
  "scripts": {
    "start": "turbo run start --filter=widget-demo --filter=vendor-demo --filter=fogbender-client --filter=storefront",
    "dev": "yarn start",
    "build": "turbo run build --filter='!./pulumi/*'",
    "preview": "turbo run preview --filter='!./pulumi/*'",
    "build-vendor-demo": "turbo run build --filter=vendor-demo",
    "build-storefront": "turbo run build --filter=storefront",
    "build-client": "turbo run build --filter=fogbender-client",
    "build-widget-demo": "turbo run build --filter=widget-demo",
    "fix": "yarn lint:fix; yarn fmt",
    "lint:fix": "yarn wsrun --exclude-missing lint --fix",
    "lint:full": "turbo run lint:full",
    "fmt": "./scripts/web-format",
    "fmt:force": "prettier --write --ignore-unknown --no-error-on-unmatched-pattern ."
  },
  "workspaces": [
    "packages/fogbender",
    "packages/fogbender-proto",
    "packages/fogbender-react",
    "client",
    "storefront",
    "vendor-demo",
    "widget-demo"
  ],
  "dependencies": {
    "wsrun": "^5.2.0"
  },
  "packageManager": "yarn@1.22.17",
  "devDependencies": {
    "turbo": "^1.5.4"
  },
  "volta": {
    "node": "18.12.1"
  }
}
