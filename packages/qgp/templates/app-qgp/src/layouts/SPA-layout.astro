---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator + "+QGP"} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
