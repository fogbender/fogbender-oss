#!/bin/sh
set -e

APP_NAME=fog
BIN_DIR="$(dirname $0)"
APP=${BIN_DIR}/${APP_NAME}
migrate () {
    echo "Migrating..."
    ${APP} eval "Fog.Release.migrate()"
}

rollback () {
    echo "Rolling back..."
    ${APP} eval "Fog.Release.rollback()"
}

case $1 in
  migrate)
    migrate
    ;;

  rollback)
    rollback
    ;;

  *)
    echo "Usage: $(basename "$0") COMMAND

The known commands are:

    migrate        Migrates database
    rollback       Rollbacks database to previous version
" >&2
    if [ -n "$1" ]; then
      echo "ERROR: Unknown command $1" >&2
      exit 1
    fi
    ;;
esac
