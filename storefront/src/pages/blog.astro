---
import { getCollection } from "astro:content";
import Layout from "../layouts/main.astro";
import Card from "../ui/Blog/Card.astro";
import Page from "../layouts/Page.astro";
import PageTitle from "../ui/landing/PageTitle.astro";
export const blogUrl = "/blog";

const posts = await getCollection("blog").then(posts =>
  posts
    .filter(({ data: { hidden } }) => !hidden)
    .sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf())
);
const title = "Blog";
---

<Layout meta={{ title }}>
  <Page>
    <PageTitle title={title} />
    <div class="flex flex-col space-y-6 lg:w-[808px] lg:max-w-[808px]">
      {
        posts.map(post => {
          return (
            <a href={blogUrl + "/" + post.slug}>
              <Card post={post} />
            </a>
          );
        })
      }
    </div>
  </Page>
</Layout>

<style>
  header {
    border-top-width: 1px;
    padding-bottom: 1rem;
  }
  @media (max-width: 40rem) {
    header {
      width: 100%;
      max-width: 64rem;
      flex-grow: 1;
    }
  }
  .posts {
    width: 100%;
    max-width: 64rem;
    gap: 1rem;
    display: flex;
    flex-flow: column nowrap;
    font-family: var(--font-body);
    font-size: var(--size-500);
    line-height: 1.3;
    color: var(--color-black);
    list-style: none;
  }
  li {
    position: relative;
    cursor: pointer;
  }
  :is(li:hover, li:focus-within) :global(.title) {
    --fill: var(--gradient-pop-1);
  }

  li :global(a:not(.overlay)) {
    z-index: 2;
  }
</style>
