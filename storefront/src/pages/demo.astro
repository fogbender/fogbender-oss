---
import Layout from "../layouts/main.astro";
import Page from "../layouts/Page.astro";
import PageTitle from "../ui/landing/PageTitle.astro";

const title = "Get started";
---

<Layout meta={{ title }}>
  <Page>
    <PageTitle title={title} />
    <div class="w-full max-w-[51rem] flex flex-col">
      <div class="w-full flex justify-center xl:justify-start ml-[30px]">
        <div class="w-[400px]">
          <a class="text-blue-700 hover:text-brand-red-500 font-medium" href="/signup">Sign up</a> or
          book a demo:
        </div>
      </div>
      <div class="w-full max-w-[51rem] flex justify-center xl:justify-start">
        <!-- Calendly inline widget begin -->
        <div
          class="calendly-inline-widget"
          data-url="https://calendly.com/andrei/fogbender-vendor-demo?hide_event_type_details=1&hide_gdpr_banner=1&background_color=fff"
          style="min-width:400px;height:630px;"
        >
        </div>
        <script
          type="text/javascript"
          src="https://assets.calendly.com/assets/external/widget.js"
          async
        ></script>
        <!-- Calendly inline widget end -->
      </div>
    </div>
  </Page>
</Layout>
