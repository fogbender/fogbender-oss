---
import * as Icons from "../Icons";
import { VisitorWidget } from "./_VisitorWidget";
const year = new Date().getFullYear();
---

<VisitorWidget client:only="react" />
<footer class="font-body text-sm w-full pb-4 lg:pb-0 px-3 md:px-8 lg:max-xl:px-20 xl:px-5">
  <div
    class:list={[
      "flex",
      "lg:space-x-2 lg:justify-end lg:mb-8 lg:flex-row",
      "max-lg:flex-col max-lg:items-center max-lg:space-y-6",
    ]}
  >
    <a
      class="h-fit rounded-lg border border-transparent py-2 px-4 hover:border-gray-200"
      href="mailto:hello@fogbender.com"
      target="_blank">hello@fogbender.com</a
    >
    <a
      class="h-fit rounded-lg border border-transparent py-2 px-4 hover:border-gray-200"
      href="/company">Company</a
    >
    <a
      class="h-fit rounded-lg border border-transparent py-2 px-4 hover:border-gray-200"
      href="https://github.com/fogbender/legal/blob/master/terms-of-service.txt"
      target="_blank">Terms of service</a
    >
    <a
      class="h-fit rounded-lg border border-transparent py-2 px-4 hover:border-gray-200"
      href="https://github.com/fogbender/legal/blob/master/privacy-policy.txt"
      target="_blank">Privacy policy</a
    >
    <a
      class="h-fit rounded-lg border border-transparent py-2 px-4 hover:border-gray-200"
      href="/security"
      target="_blank">Security commitment</a
    >
    <div class="md:py-2 md:space-x-4 lg:space-x-4">
      <a href="https://twitter.com/fogbender" title="twitter" target="_blank"
        ><Icons.Twitter className="w-6 h-5 cursor-pointer md:inline-block max-lg:mb-6" />
      </a>
      <a href="https://www.linkedin.com/company/fogbender/" target="_blank"
        ><Icons.LinkedIn className="w-6 h-6 cursor-pointer rounded md:inline-block  max-lg:mb-6" />
      </a>
      <a href="https://github.com/fogbender/" target="_blank"
        ><Icons.GitHub className="w-6 h-6 cursor-pointer rounded md:inline-block  max-lg:mb-6" />
      </a>
    </div>
  </div>
  <hr />
  <div
    class:list={[
      "flex flex-col mt-6",
      "md:flex-row md:justify-between",
      "max-md:items-center max-md:space-y-4",
    ]}
  >
    <div>
      <div class="flex items-center gap-1">
        <span>Â©</span>
        <span><time datetime={`${year}`}>{year}</time> Fogbender Software, Inc.</span>
      </div>
    </div>
    <div class="mb-4">
      In memory of
      <a class="underline" href="https://maximumfun.org/evan/" target="_blank" rel="noopener">
        Evan Larsen
      </a>
    </div>
  </div>
</footer>
