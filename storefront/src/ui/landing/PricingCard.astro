---
type PricingCardProps = {
  title: string;
  price: string;
  benefits: string[];
};

const { title, price, benefits } = Astro.props as PricingCardProps;
---

<div
  class="relative overflow-hidden pl-6 pb-6 pt-4 bg-gray-50 rounded-xl flex flex-col justify-between gap-3"
>
  <div class="flex justify-between">
    <h3 class="text-2xl font-prompt uppercase">{title}</h3>
    <div class="pricing bg-emerald-500 font-semibold text-sm sm:text-lg">{price}</div>
  </div>
  <div>
    {
      benefits.map(benefit => {
        return (
          <div class="font-normal flex items-center key-benefits text-base mb-3 last:mb-0">
            <span class="pl-3">{benefit}</span>
          </div>
        );
      })
    }
  </div>
</div>

<style>
  .pricing {
    right: 0;
    font-family: "Open Sans";
    position: absolute;
    top: 0;
    padding: 4px 24px;
    color: #ffffff;
    border-bottom-left-radius: 16px;
  }
  .key-benefits {
    font-family: "Open Sans";
  }

  .key-benefits:before {
    content: "";
    display: inline-block;
    height: 8px;
    left: 0;
    border-radius: 50%;
    width: 8px;
    background: #ff7315;
  }
</style>
