---
import { Image } from "astro:assets";
import FogbenderTextLogo from "./fogbender-text-logo.astro";
import FogbenderLogo from "./assets/logo.svg";
import Hamburger from "./hamburger.astro";
import ThemeController from "./theme-controller.astro";
const links =[{name:"Docs",href:"/docs"},{name:"Blog",href:"/blog"},{name:"Showcase",href:"/showcase"},{name:"Enterprise",href:"/enterprise"}]
---

<style is:global>
.dark .nav-container-blur{
    background-color: rgba(0, 0, 0, .5);
    backdrop-filter: blur(12px);
}

.nav-container-blur{
    backdrop-filter: blur(12px);
    background-color: rgba(255,255,255,85%)
}


</style>
<div class="bg-transparent sticky top-0 z-20">
    <div class="nav-container-blur bg-white absolute z-[-1] h-full w-full shadow-[0_2px_4px_rgba(0,0,0,.02),0_1px_0_rgba(0,0,0,.06)] dark:shadow-[0_-1px_0_rgba(255,255,255,.1)_inset] dark:bg-black dark:contrast-more:shadow-[0_0_0_1px_#000] contrast-more:shadow-[0_0_0_1px_#fff]"/>
    <nav class="mx-auto flex h-16 max-w-[90rem] items-center justify-end gap-2 pl-[max(env(safe-area-inset-left),1.5rem)] pr-[max(env(safe-area-inset-right),1.5rem)]">
        <div class="flex items-center mr-auto gap-x-5">
            <Image src={FogbenderLogo} alt="fogbender-logo" width={35} height={35}/>
            <FogbenderTextLogo className="w-40"/>
        </div>
        {links.map(link=>{
            return <a class="text-sm contrast-more:dark:text-gray-100 relative -ml-2 hidden whitespace-nowrap p-2 md:inline-block text-gray-400 hover:text-gray-200" aria-current="false" href="/repo/docs">
            <span class="absolute inset-x-0 text-center">{link.name}</span>
            <span class="invisible font-medium">{link.name}</span></a>
        })}
        <ThemeController/>
        <Hamburger className="md:hidden hamburger w-5 h-5" stroke="white" />
    </nav>
</div>
<script>
    document.addEventListener("pivot-sidebar-toggle", () => {
        const hamburgerIcon = document.querySelector(".hamburger svg");
        hamburgerIcon?.classList.toggle('open')
      });
</script>